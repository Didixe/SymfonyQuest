{% extends 'base.html.twig' %}

{% block title %}Acteur {{ actor.name }}{% endblock %}

{% block body %}
    <div class="page zoom">
        <div class="media">
            <h1><a class="zoomLink" href="{{ path('app_actor') }}">{{ actor.name }}</a></h1>
            <div class="sideBySide">
                <img class="align-self-start mr-3" src="{{ vich_uploader_asset(actor, 'pictureFile')}}" alt="{{ actor.name }} picture">
                <div class="oneUnderTheOther m-lg-3">

                    {% if actor.programs is not empty %}
                    <div class="margeLi">
                        <h2>Séries associées :</h2>
                        <ul>
                            {% for program in actor.programs %}
                                <li><a class="zoomLink" href="{{ path("program_show", { slug: program.slug }) }}"> {{ program.title }} </a></li>
                            {% endfor %}
                        </ul>
                        {% else %}
                            <p>Aucune série associée à cette acteur.</p>
                        {% endif %}
                    </div >
                </div>
        </div>
            <div class="sideBySide">
                <a href="{{ path('app_actor_edit', {'id': actor.id}) }}" class="btn m-2 mt-3 btn-primary text-white">Modifier</a>
                <form method="post" action="{{ path('app_actor_delete', {'id': actor.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ actor.id) }}">
                    <button class="btn m-2 mt-3 btn-primary text-white">Effacer</button>
                </form>
            </div>
            </div>

            <a href="{{ path('app_actor') }}">
                Retour à la liste des acteurs
            </a>
    </div>
{% endblock %}