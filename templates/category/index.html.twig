{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Les catégories : </h1>
    {% for category in categories %}
        <div>
{#            <h2> Catégorie : {{ category.name }}</h2>#}
            <a href="{{ path("category_show", { categoryName: category.name }) }}">{{ category.name }}</a>
        </div>
    {% else %}
        Aucune Catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}