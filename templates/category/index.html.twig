{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <div class="page zoom">
        <h1>Les catégories : </h1>
        {% for category in categories %}
            <div class="margeLi">
                <a class="zoomLink" href="{{ path("category_show", { categoryName: category.name }) }}">{{ category.name }}</a>
            </div>
        {% else %}
            Aucune Catégorie trouvée.
        {% endfor %}
        {% if is_granted("ROLE_ADMIN") %}
            <a class="zoomLink fs-5" href="{{ path('category_new') }}"> +add  </a>
        {% endif %}

        <div class="margeLi">
            <a href="{{ path('app_index') }}">
                Retour à l'accueil
            </a>
        </div>
    </div>
{% endblock %}