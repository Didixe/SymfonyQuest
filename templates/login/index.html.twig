{#            <h1>Bonjour {{ last_username }}! </h1>#}
        <h3 class="h1 mb-3 font-weight-normal">S'identifier</h3>

            <form action="{{ path('app_login') }}" method="post">
                <label for="username">Email:</label>
                <input class="form-control mt-2" type="text" id="inputEmail" name="_username" value="{{ last_username }}">
{#                <input type="text" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control mt-2" autocomplete="email" required autofocus placeholder="E-mail">#}

                <label for="password">Password:</label>
                <input class="form-control mt-2" type="password" id="inputPassword" name="_password">
{#                <input type="password" name="password" id="inputPassword" class="form-control mt-2" autocomplete="current-password" required placeholder="Mot de passe">#}

                <input type="hidden" name="_target_path" value="/">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="d-flex justify-content-center">
                    <button class="btn btn-lg btn-secondary mt-3 text-white fs-4 fw-medium" type="submit">
                        Se connecter
                    </button>
                </div>
            </form>

            <p class="mt-3"> Première visite sur Wild-Série ? <a class="zoomLink" href="{{ path('app_register') }}">Inscrivez-vous</a></p>
            <a class="zoomLink fw-medium fs-5" href="{{ path('app_logout') }}">Me déconnecter</a>
{#        </div>#}
    </div>
{% endblock %}
