{% extends 'base.html.twig' %}

{% block title %}Episode #{{ episode.number }}{% endblock %}

{% block body %}
    <div class="media-body">
        <h1 class="mt-0"> Episode {{ episode.number }} / Saison {{ season.number }}  de {{ program.title }}</h1>
        <p>{{ episode.title }}</p>
        <p>{{ episode.synopsis }}</p>
    </div>

    <a href="{{ path('program_season_show', {'program': program.id, 'season': season.id}) }}">
        Retour à la page de la série
    </a>
{% endblock %}