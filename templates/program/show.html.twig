{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="page zoom">
        <div class="media">
            <div class="media-body">
                <h1 class="mt-0">{{ program.title }}</h1>

                <p>{{ program.synopsis }}</p>
                <p>Catégorie : <a class="zoomLink" href="{{ path('category_index') }}">{{ program.category.name }}</a></p>
                <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

                {% if program.seasons|length > 0 %}
                    <h2>Saisons disponibles :</h2>
                    <ul>
                        {% for season in program.seasons %}
                            <li>
                                {#                            <a href="{{ path('program_season_show', {'programId': program.id, 'seasonId': season.id}) }}">#}
                                <a class="zoomLink" href="{{ path('program_season_show', {'program': program.id, 'season': season.id}) }}">
                                    Saison {{ season.number }}
                                </a>
                                <br>
{#                                <a href="{{ path('app_season_edit', {'id': season.id}) }}"class="btn ">Modifier</a>#}
{#                                {{ include('/season/_delete_form.html.twig') }}#}
                            </li>

                        {% endfor %}
                    </ul>
                {% else %}
                    <p>Aucune saison disponible pour cette série.</p>
                {% endif %}
                <strong>Acteurs :</strong>
                <ul>
                    {% for actor in program.actors %}
                        <li>{{ actor.name }}</li>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <a href="{{ path('program_index') }}">
            Retour à la liste des programmes
        </a>
    </div>
{% endblock %}