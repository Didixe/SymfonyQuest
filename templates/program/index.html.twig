{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block bodyClass %}class="other-pages"{% endblock %}

{% block body %}
    <div class="page zoom">

    <h1>Toutes les séries : </h1>
        {% for program in programs %}
            <div class="size box zoom">
            {#            <div class="poster">#}
                <h2><a class="zoomLink" href="{{ path("program_show", { id: program.id }) }}">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</a></h2>
                <p>{{ program.synopsis }}</p>
                <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
                {#            </div>#}
    {#            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>#}
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}

        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>
{% endblock %}